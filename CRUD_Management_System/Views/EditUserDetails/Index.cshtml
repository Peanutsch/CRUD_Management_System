@model CRUD_Management_System.Models.UserDetailsModel

@{
    ViewData["Title"] = "Edit Details";
}

<h2> </h2>

<form asp-action="SaveEdit" method="post" class="user-form">
    <div class="form-group fullwidth">
        <label for="Alias">Alias</label>
        <input type="text" asp-for="Alias" id="Alias" readonly />
    </div>

    <div class="form-group two-columns">
        <div>
            <label for="Name">Naam</label>
            <input type="text" asp-for="Name" id="Name" required />
        </div>
        <div>
            <label for="Surname">Achternaam</label>
            <input type="text" asp-for="Surname" id="Surname" required />
        </div>
    </div>

    <div class="form-group three-columns">
        <div>
            <label for="Address">Adres</label>
            <input type="text" asp-for="Address" id="Address" />
        </div>
        <div>
            <label for="ZIP">Postcode</label>
            <input type="text" asp-for="ZIP" id="ZIP" />
        </div>
        <div>
            <label for="City">Stad</label>
            <input type="text" asp-for="City" id="City" />
        </div>
    </div>

    <div class="form-group two-columns">
        <div>
            <label for="Email">E-mail</label>
            <input type="email" asp-for="Email" id="Email" required />
        </div>
        <div>
            <label for="Phonenumber">Telefoonnummer</label>
            <input type="text" asp-for="Phonenumber" id="Phonenumber" />
        </div>
    </div>

    <div class="form-group two-columns">
        <div>
            <label for="Online">Online Status</label>
            <input type="checkbox" asp-for="Online" id="Online" />
        </div>
        <div>
            <label for="Sick">Afwezig door ziekte</label>
            <input type="checkbox" asp-for="Sick" id="Sick" />
        </div>
    </div>

    <!-- Confirm to save edit (SweetAlert) -->
    <button type="button"
            class="btn btn-success"
            id="saveEditButton"
            data-alias="@Model.Alias">
        Opslaan
    </button>

    <a asp-controller="DashboardAdmin" asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>

<script src="~/js/confirmation.js"></script>
