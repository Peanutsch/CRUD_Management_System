@model CRUD_Management_System.Models.UserDetailsModel

@{
    ViewData["Title"] = "Overzicht Gebruiker";
}
<h1>@ViewData["Title"]</h1>

<p>Overzicht van gebruiker @Model.Alias</p>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>
</head>
<body>

    <h2>User Details</h2>

    <table border="1">
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Surname</th>
            <td>@Model.Surname</td>
        </tr>
        <tr>
            <th>Alias</th>
            <td>@Model.Alias</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>ZIP Code</th>
            <td>@Model.ZIP</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>Email Address</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Phonenumber</th>
            <td>@Model.Phonenumber</td>
        </tr>
        <tr>
            <th>Online Status</th>
            <td>@Model.Online</td>
        </tr>
        <tr>
            <th>Absence due Illness</th>
            <td>@Model.Sick</td>
        </tr>
    </table>

</body>
</html>