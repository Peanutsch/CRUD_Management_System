@model IEnumerable<CRUD_Management_System.Models.UserDetailsModel>

@{
    ViewData["Title"] = "Dashboard Admin";
}

<div class="text-center">
    <h1 class="display-4">Welkom @ViewData["CurrentUser"]</h1>

    <!-- Buttons -->
    <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Uitloggen</a>

    <!-- Gebruikerslijst -->
    <div class="mt-4">
        <input type="text" id="searchInput" onkeyup="filterTable()" placeholder="Zoeken...">

        <div class = "table-cell">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Alias</th>
                        <th>Address</th>
                        <th>ZIP Code</th>
                        <th>City</th>
                        <th>Email</th>
                        <th>Phonenumber</th>
                        <th>Online Status</th>
                        <th>Absence due Illness</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="table-cell">@user.Name</td>
                            <td class="table-cell">@user.Surname</td>
                            <td class="table-cell">@user.Alias</td>
                            <td class="table-cell">@user.Address</td>
                            <td class="table-cell">@user.ZIP</td>
                            <td class="table-cell">@user.City</td>
                            <td class="table-cell">@user.Email</td>
                            <td class="table-cell">@user.Phonenumber</td>
                            <td class="table-cell">@user.Online</td>
                            <td class="table-cell">@user.Sick</td>
                            <td>
                                                    <!-- Generate url with ("file.cshtml", "Folder") -->
                                <a href="@Url.Action("Index", "EditUserDetails", new { aliasId = user.Alias })" class="btn btn-info btn-sm">Edit Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- JavaScript-bestand inladen voor de zoekfunctie -->
<script src="~/js/userSearch.js"></script>
