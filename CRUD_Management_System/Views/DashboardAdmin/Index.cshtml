@model IEnumerable<CRUD_Management_System.Models.UserDetailsModel>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Welkom @(ViewData["CurrentUser"] ?? "Unknown") (role: @(ViewData["Role"] ?? "Unknown"))</h1>

    <!-- Buttons Top -->
    <a asp-controller="Login" asp-action="Index" class="btn btn-danger">Uitloggen</a>

    <!-- Gebruikerslijst -->
    <div class="mt-4">
        <input type="text" id="searchInput" onkeyup="filterTable()" placeholder="Zoeken...">

        <div class = "table-cell">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Alias</th>
                        <th>Address</th>
                        <th>ZIP Code</th>
                        <th>City</th>
                        <th>Email</th>
                        <th>Phonenumber</th>
                        <th>Online Status</th>
                        <th>Absence due Illness</th>
                        <th>Actions</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    @*
                    Data comes from authRequest.js
                    *@
                </tbody>
            </table>
        </div>
    </div>
    <!-- Buttons Bottom -->
    <a asp-controller="CreateUser" asp-action="Index" class="btn btn-danger">Create New User</a>
</div>

<script src="~/js/userSearch.js"></script>
<script src="~/js/tableRowClickHighlight.js"></script>
<script src="~/js/confirmation.js"></script>
<script src="~/js/deleteUser.js"></script>
<script src="~/js/authRequest.js"></script>